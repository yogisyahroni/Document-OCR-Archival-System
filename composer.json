{
    "name": "antigraviti/document-ocr-archival",
    "description": "Document OCR & Archival System",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-gd": "*",
        "symfony/http-foundation": "^6.4",
        "symfony/console": "^6.4",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.5",
        "ramsey/uuid": "^4.7",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.10",
        "elasticsearch/elasticsearch": "^8.11",
        "aws/aws-sdk-php": "^3.290",
        "respect/validation": "^2.2",
        "promphp/prometheus_client_php": "^2.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "fakerphp/faker": "^1.23",
        "symfony/var-dumper": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Database\\": "database/",
            "Workers\\": "workers/",
            "Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage/",
        "cs-check": "php-cs-fixer check",
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyze"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}